    </style>

    <style name="TextAppearance.Enq.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="TextAppearance.Enq.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextAppearance.Enq.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <!-- COMPONENT STYLES -->

    <style name="Widget.EnQ.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemIconSize">22dp</item>
    </style>

